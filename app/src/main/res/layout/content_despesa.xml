<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ListaDespesaActivity"
    tools:showIn="@layout/activity_despesa">

    <TextView
        android:id="@+id/tituloDespesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/despesa"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/listaDespesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloDespesa"/>

</android.support.constraint.ConstraintLayout>